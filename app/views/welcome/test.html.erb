<head>
  <title>TEST|SoshineSee</title>
  <script type="text/javascript" src="demo/Alpha_Boluo_Groundlay.js"></script>
  <script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=NccogPfKH2hGdsARVdK7lsVvNao7Y4Hm"></script>
</head>
<body>
<div>
  <button type="button" class="btn-primary" onclick="addpolygon()">POLYGON</button>
  <button type="button" class="btn-primary" onclick="getzoom()" id="zoom">ZOOM</button>
  <button type="button" class="btn-primary" onclick="addzone()">ZONE</button>
</div>
<div id="allmap" style="height: 100%">

</div>


<script type="text/javascript">
  // 百度地图API功能
  var map_test = new BMap.Map("allmap",{mapType:BMAP_NORMAL_MAP});    // 创建Map实例
  //BMAP_NORMAL_MAP
  //BMAP_HYBRID_MAP

  var ggn = 23.133935;
  var ggs = 23.124302;
  var gge = 114.213799;
  var ggw = 114.203375;

  //ABCD Point
  var wnP = new BMap.Point(ggw,ggn);
  var enP = new BMap.Point(gge,ggn);
  var esP = new BMap.Point(gge,ggs);
  var wsP = new BMap.Point(ggw,ggs);


  var centerP = new BMap.Point((ggw+gge)/2,(ggn+ggs)/2);
  map_test.centerAndZoom(centerP, 16);  // 初始化地图,设置中心点坐标和地图级别
  map_test.addControl(new BMap.MapTypeControl());   //添加地图类型控件
  map_test.setCurrentCity("广州");          // 设置地图显示的城市 此项是必须设置的
  map_test.enableScrollWheelZoom(true);     //开启鼠标滚轮缩放


  function addpolygon(){
    //map_test.removeOverlay(polygon);
    //kml <label>
    var polygon = new BMap.Polygon([wnP,enP,esP,wsP], polygonOptions);  //创建多边形
    //map_test.clearOverlays();
    map_test.addOverlay(polygon);           //增加多边形覆盖物
  }

  function getzoom(){
    zoomindex = map_test.getZoom();
    document.getElementById("zoom").innerHTML = "ZONE:"+zoomindex;
  }


  map_test.addEventListener('click', function(e){

    var info = new BMap.InfoWindow('', {width: 260});
    var projection = this.getMapType().getProjection();

    var lngLat = e.point;
    var lngLatStr = "经纬度：" + lngLat.lng + ", " + lngLat.lat;

    var worldCoordinate = projection.lngLatToPoint(lngLat);
    var worldCoordStr = "<br />平面坐标：" + worldCoordinate.x + ", " + worldCoordinate.y;

    var pixelCoordinate = new BMap.Pixel(Math.floor(worldCoordinate.x * Math.pow(2, this.getZoom() - 18)),
        Math.floor(worldCoordinate.y * Math.pow(2, this.getZoom() - 18)));
    var pixelCoordStr = "<br />像素坐标：" + pixelCoordinate.x + ", " + pixelCoordinate.y;

    var tileCoordinate = new BMap.Pixel(Math.floor(pixelCoordinate.x / 256),
        Math.floor(pixelCoordinate.y / 256));
    var tileCoordStr = "<br />图块坐标：" + tileCoordinate.x + ", " + tileCoordinate.y;

    var viewportCoordinate = map_test.pointToPixel(lngLat);
    var viewportCoordStr = "<br />可视区域坐标：" + viewportCoordinate.x + ", " + viewportCoordinate.y;

    var overlayCoordinate = map_test.pointToOverlayPixel(lngLat);
    var overlayCoordStr = "<br />覆盖物坐标：" + overlayCoordinate.x + ", " + overlayCoordinate.y;

    info.setContent(lngLatStr + worldCoordStr + pixelCoordStr + tileCoordStr +
        viewportCoordStr + overlayCoordStr);
    map_test.openInfoWindow(info, lngLat);
  });


  //Maffee Define ZoneOverlay
  function ZoneOverlay_test(WN,ES,imageurl){
    this._WN = WN;
    this._ES = ES;
    this._imageurl = imageurl;
  }

  ZoneOverlay_test.prototype = new BMap.Overlay();

  ZoneOverlay_test.prototype.initialize = function(map_test){

    this._map = map_test;

    var div = document.createElement("div");
    div.style.position = "absolute";
    this._width = this._map.pointToOverlayPixel(this._ES).x - this._map.pointToOverlayPixel(this._WN).x;
    this._height = this._map.pointToOverlayPixel(this._ES).y - this._map.pointToOverlayPixel(this._WN).y;
    div.style.width = this._width + "px";
    div.style.height = this._height + "px";

    var image = document.createElement("img");
    image.src = this._imageurl;
    image.width = this._width;
    image.height = this._height;
    div.appendChild(image);

    div.style.backgroundColor = "white";
    map_test.getPanes().mapPane.appendChild(div);

    this._div = div;

    return div;

  };

  ZoneOverlay_test.prototype.draw = function(){

    var position = this._map.pointToOverlayPixel(this._WN);
    this._div.style.left = position.x + "px";
    this._div.style.top = position.y + "px";

  };

  var myZoneOverlay_test = undefined;
  has_zone_t = false;
  function addzone(){
    has_zone_t = true;
    var WN_1 = new BMap.Point(114.203375,23.133935);
    var ES_1 = new BMap.Point(114.213799,23.124302);
    var imageurl_1 = "/assets/demo/soshineseeA/boluo_A_nc_s.jpg";
    myZoneOverlay_test = new ZoneOverlay_test(WN_1,ES_1,imageurl_1);
    map_test.addOverlay(myZoneOverlay_test);
  }
  map_test.addEventListener("zoomstart",function(){
    if (has_zone_t){
      map_test.removeOverlay(myZoneOverlay_test);
    }
  });

  map_test.addEventListener("zoomend",function(){

    map_test.addOverlay(myZoneOverlay_test);
  });


</script>

</body>
